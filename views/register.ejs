<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<!-- headers -->
<%-include('templates/_headers.ejs')%>
<!-- end headers -->
<!-- register section -->
<section id="register">
    <div class="register reglog sec">
      <div class="forms">
          <div class="formhead">
          <h2>Welcome!!<br> Kindly Fill The Registration Form!!</h2>
          </div>
          <div class="formmain">
          <form action="/api/user" method="post" class="form">
           <label for="fname">First Name</label>
           <input type="text" placeholder="Enter First Name" name="fname" required><br/>
           <label for="lname">Last Name</label>
           <input type="text"  placeholder="Enter Last Name"name="lname"><br/>
           <label for="mobileNumber">Mobile Number</label>
           <input type="number" placeholder="Enter Mobile Number" name="mobileNumber" required><br>
           <label for="email">Email</label>
           <input type="email" placeholder="Enter Email Address" name="email" required ><br>
           
           <button type="submit" value="Submit">SUBMIT</button>
           <p class="login">Already a User? <a href="/login" style="color:blue">Login</a></p>
          </form>  
          </div>
      </div>     
    </div>
   </section>
  <!-- end register section -->
 <!-- footers -->
 <%-include('templates/_footer.ejs')%>
 <!-- end footers -->