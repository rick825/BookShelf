 <!-- login section -->
 <section id="login">
    <div class="login reglog  sec">
      <div class="forms">
          <div class="formhead">
          <h2>Welcome!!<br>to the streaming Hub!! Kindly login</h2>
          </div>
          <div class="formmain formmobile">
          <form action="/api/sendOtp" method="post" class="form" onsubmit="(e) => e.preventDefault();">
           <label for="mobileNumber">Mobile Number</label>
           <input type="number" placeholder="Enter Mobile Number" name="mobileNumber" required><br>
           <button type="submit" value="Submit" onclick="otpsent()" id="send-otp">Send OTP</button>
          
           <p class="">Not Registered? <a href="/register" style="color:blue">Register</a></p>
          </form>  
          </div>
          
      </div>     
    </div>
   </section>
